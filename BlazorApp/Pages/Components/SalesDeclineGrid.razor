@inject DashboardService SalesService

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">매출 하락 안경원 현황</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Outlined" 
                      StartIcon="@Icons.Material.Filled.Refresh"
                      OnClick="RefreshAsync"
                      Disabled="isLoading"
                      Size="Size.Small">
                새로고침
            </MudButton>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="pa-0" Style="height: 100%; display: flex; flex-direction: column;">
        @if (isLoading)
        {
            <!-- 프로그레스 로딩 -->
            <div style="height: calc(100vh - 340px); display: flex; flex-direction: column; align-items: center; justify-content: center;">
                <MudProgressCircular Size="Size.Large" Color="Color.Primary" Indeterminate="true" />
                <MudText Typo="Typo.body1" Class="mt-4" Color="Color.Secondary">
                    매출 데이터를 불러오는 중입니다...
                </MudText>
            </div>
        }
        else if (salesData?.Any() == true)
        {
            <MudTable Items="@salesData" Hover="true" Breakpoint="Breakpoint.None" Dense="true" FixedHeader="true" Height="calc(100vh - 340px)">
                <HeaderContent>
                    <MudTh Style="width: 50px; text-align: center;">R</MudTh>
                    <MudTh Style="width: 200px;">안경원명</MudTh>
                    <MudTh Style="width: 150px; text-align: right;">전년평균매출</MudTh>
                    <MudTh Style="width: 150px; text-align: right;">전월매출</MudTh>
                    <MudTh Style="width: 150px; text-align: right;">당월매출</MudTh>
                    <MudTh Style="width: 150px; text-align: right;">차이</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd Style="text-align: center;">
                        <MudText Typo="Typo.body2" Color="@GetRankChipColor(context.Rank)">@context.Rank</MudText>
                    </MudTd>
                    <MudTd>
                        <MudTooltip Text="@context.StoreName" Placement="Placement.Top">
                            <MudText Typo="Typo.body2"
                                     Style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; cursor: help;">
                                @context.StoreName
                            </MudText>
                        </MudTooltip>
                    </MudTd>
                    <MudTd Style="text-align: right;">
                        <MudText Typo="Typo.body2">
                            @context.PreyearAvgSales.ToString("N0")
                        </MudText>
                    </MudTd>
                    <MudTd Style="text-align: right;">
                        <MudText Typo="Typo.body2">
                            @context.PremonthSumSales.ToString("N0")
                        </MudText>
                    </MudTd>
                    <MudTd Style="text-align: right;">
                        <MudText Typo="Typo.body2">
                           @context.MonthSumSales.ToString("N0")
                        </MudText>
                    </MudTd>
                    <MudTd Style="text-align: right;">
                        <MudText Typo="Typo.body2" Color="@(context.DiffAmount < 0 ? Color.Error : Color.Primary)">
                            @context.DiffAmount.ToString("N0")
                        </MudText>
                    </MudTd>
                </RowTemplate>
            </MudTable>
        }
        else
        {
            <MudAlert Severity="Severity.Info" Class="ma-4">
                표시할 데이터가 없습니다.
            </MudAlert>
        }
    </MudCardContent>
</MudCard>

@code {
    private List<OpticalStoreSalesDecline>? salesData;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            var allSales = await SalesService.GetAllStoresSalesDeclineAsync();
            salesData = allSales.Select((store, index) => new OpticalStoreSalesDecline
                               {
                                   StoreName = store.StoreName,
                                   PreyearAvgSales = store.PreyearAvgSales,
                                   PremonthSumSales = store.PremonthSumSales,
                                   MonthSumSales = store.MonthSumSales,
                                   DiffAmount = store.DiffAmount,
                                   Rank = store.Rank,
                               })
                               .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading sales data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public async Task RefreshAsync()
    {
        await LoadDataAsync();
    }

    private Color GetRankChipColor(int rank) => rank switch
    {
        1 => Color.Warning,
        2 => Color.Primary,
        3 => Color.Info,
        _ => Color.Secondary
    };
}
